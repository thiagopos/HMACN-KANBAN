<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <link href="/css/cards_visitas.css" rel="stylesheet" type="text/css" />
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Asap+Condensed:ital,wght@0,400;0,600;1,400;1,600&display=swap"
    rel="stylesheet">
  <title>Controle de Acesso</title>
</head>
<div class="header">
  <a href="/recepcao" class="logo">HMACN - Lista de Pacientes</a>
  <div class="header-right">
    <a href="/recepcao">Lista de Pacientes</a>
    <a href="/visitas">Visitas Ativas</a>
    <a class="active" href="/revisitar">Revisitar</a>
    <a href="/painel_visitas">Total Visitas</a>
  </div>
</div>

<body>

  <form action="/revisitar" method="post">
    <input id="txtSearch" name="pesquisa" placeholder="Pesquisar" minlength="3" autocomplete="off" required>
    <button class="btnHoras" type="submit">Pesquisar</button>
  </form>
  <div id="container">
    <% if(data !== null){ %>
    <% data.forEach(function(v) { %>
    <div class="card">
      <img src="<%=v.imagem%>" alt="Avatar" style="width:100%">
      <h4><b><%=v.visitante%></b></h4>
      <div class="container">

        <p>Paciente: <%=v.nome%></p>
        <p>Documento: <%=v.documento%><p>
            <p><strong><%=v.data%></strong></p>
            <form action="/cadastro" method="post">
              <input type="text" class="imagem" name="imagem" value="<%=v.imagem%>" style="display:none">
              <input type="text" class="prontuario" name="prontuario" value="<%=v.prontuario%>" style="display:none">
              <input type="text" class="leito" name="leito" value="<%=v.leito%>" style="display:none">
              <input type="text" class="clinica" name="clinica" value="<%=v.clinica%>" style="display:none">
              <input type="text" class="nome" name="nome" value="<%=v.nome%>" style="display:none">
              <input type="text" class="visitante" name="visitante" value="<%=v.visitante%>" style="display:none">
              <input type="text" class="vinculo" name="vinculo" value="<%=v.vinculo%>" style="display:none">
              <input type="text" class="documento" name="documento" value="<%=v.documento%>" style="display:none">
              <input type="text" class="telefone" name="telefone" value="<%=v.telefone%>" style="display:none">
              <button id="btnSubmit" class="btnHoras" type="submit">Revisitar</button>
            </form>


      </div>
    </div>
    <% }) %>
    <% } %>


  </div>



  <footer>DTI - HMACN - 2021</footer>
</body>

</html>